{
  "printWidth": 80,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": true,
  "arrowParens": "always",
  "bracketSpacing": false,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": ".github/**/*.yml",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["*.html", "legacy/**/*.js"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": [".*", "*.json", "*.md", "*.toml", "*.yml"],
      "options": {
        "useTabs": false
      }
    }
  ]
}
